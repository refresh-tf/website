<!DOCTYPE html>
<!-- HTML template for the generated md icon font -->
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{{fontName}}</title>
    <style>

      body {
          font-family: sans-serif;
          margin: 0;
          padding: 10px 50px;
      }

      .preview,
      .preview>* {
          line-height: 2em !important;
      }

      .preview__icon {
          display: inline-block;
          width: 32px;
          text-align: center;
      }

      .icon {
          display: inline-block;
          font-size: 16px;
      }
      /*
      @font-face {
          font-family: "maxdup_icons";
          src: url("../static/maxdup_icons.eot");
          src: url("../static/maxdup_icons.eot?#iefix") format("embedded-opentype"),
               url("../static/maxdup_icons.woff") format("woff"),
               url("../static/maxdup_icons.woff2") format("woff2"),
               url("../static/maxdup_icons.ttf") format("truetype"),
               url("../static/maxdup_icons.svg#maxdup_icons") format("svg");
      }
      */

      {{{styles}}}

    </style>
  </head>
  <body>
    <h1>{{fontName}}</h1>
    {{#each names}}
    <div class="preview">
      <span class="mdi mdi-{{this}}">
        <span class="{{../baseClass}} {{../classPrefix}}{{this}}"></span>
      </span>
      <span>{{this}}</span>
    </div>
    {{/each}}
  </body>
</html>
